<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_image_details"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.io.qiushi.ui.imagedetails.ImageDetailsActivity">

    <ImageView
        android:id="@+id/image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <com.io.qiushi.widget.RingProgressBar
        android:id="@+id/rpb_loading"
        android:layout_width="50dp"
        app:ringProgressColor="@color/primary_dark"
        app:ringColor="@color/primary_dark"
        app:max="100"
        android:layout_gravity="center"
        app:style="FILL"
        android:layout_height="50dp"/>
</FrameLayout>
